<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>

    <link rel="stylesheet" href="~/lib/Font-Awesome/css/font-awesome.min.css"/>
    <link rel="stylesheet" href="~/lib/bootswatch/yeti/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>

</head>
<body style="font-family: sans-serif; font-size: 14px">
<div class="row" style="width: 100%">
    <div class="col-md-6 col-md-offset-3">
        <div class="header">
            <img src="~/img/logo_Image.png" alt="HeaderImg" width="100%" height="100%"/>
        </div>
        <div style="background-image: url(/img/Content_Bar1.png); width: 100%; height: 100%;">
            @*<img src="~/img/Content_Bar1.png" alt="ContentBarImg" width="100%" height="100%" />*@
            <nav id="NavigationBar" class="">
                <ul>
                    <li class=""><a asp-controller="App" asp-action="Index">Home</a></li>
                    <li><a asp-controller="App" asp-action="About">About</a></li>
                    <li><a asp-controller="App" asp-action="Contact">Contact Us</a></li>
                </ul>
            </nav>
        </div>

        <div id="wrapper" style="">
            <div id="main" class="container-fluid" style="background-image: url(/img/BodyImage.png); width: 100%; height: 100%;">
                <div>
                    @RenderBody()
                </div>
            </div>
            <div id="footer" class="container-fluid">
                <div class="navbar navbar-inverse navbar-fixed-bottom">
                    <h4 class="text-center text-info">&copy; 2016 BlazeWolf Ltd.</h4>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<environment names="Development">
    <script type="text/javascript" src="~/js/site.js"></script>
</environment>
    <environment names="Production,Staging">
        <script type="text/javascript" src="~/lib/_app/site.js"></script>
    </environment>

@RenderSection("Scripts", false)

</body>
</html>